#!/usr/bin/env ruby

require_relative '../lib/tic_tac_toe'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
display_board(board)

def play(board)
  if over?(board)
    if won?(board)
      puts `The winner is #{(board[won(board)[0]] == "X") ? "X":"O"}`

    else

    end
  else
    play(board)
  end
end

play(board)
